{% extends "XdaysaysayAdminBundle:Team:main.html.twig" %}

{% trans_default_domain "admin" %}

{% block page_subtitle %}
    Liste des team
{% endblock %}

{% block page_content %}
    <div class="box">
        <div class="box-body">
            <div class="text-right">
                <a class="btn btn-info" href="{{ path('xdaysaysay_admin_team_new') }}">Nouveau</a>
            </div>
        </div>
    </div>
    <div class="box">
        <div class="box-body">
            <table class="table table-bordered table-hover dataTable">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Serveur IRC</th>
                        <th>Chan</th>
                        <th class="no-sort"></th>
                    </tr>
                </thead>
                <tbody>
                {% for team in teams %}
                    <tr>
                        <td>{{ team.id }}</td>
                        <td>{{ team.name }}</td>
                        <td>{{ team.ircServer }}</td>
                        <td>{{ team.chanName }}</td>
                        <td>
                            <a href="{{ path('xdaysaysay_admin_team_edit', {id: team.id}) }}" class="btn btn-primary">{{ 'admin.common.action.edit'|trans }}</a>
                            <a href="{{ path('xdaysaysay_admin_team_delete_confirm', {id: team.id}) }}" class="btn btn-danger">{{ 'admin.common.action.delete'|trans }}</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}